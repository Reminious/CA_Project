@model IEnumerable<CA_Project.Models.PurchaseRecord>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CusLayout.cshtml";
}
<br>
<br>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            text-align: center;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .add-button {
            display: block;
            width: 100px;
            margin-left: 0px auto;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
        }

            .add-button:hover {
                background-color: #0056b3;
            }

        /*here define the search*/
        .search-body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100px;
            width: 300px;
            margin: 0 auto;
        }

        .search {
            border: 2px solid #ccc;
            margin: 0 auto;
            border-radius: 25px;
            display: flex;
            overflow: hidden;
            height: 50px;
        }

        .input {
            height: 100%;
            font-family: inherit;
            font-size: inherit;
            padding-inline-start: 25px;
            border: none;
            outline: none;
        }

        .image {
            height: 200px;
            width: 200px;
        }

        .ButtonContainer {
            text-align: right;
            color: aqua;
        }
    </style>
</head>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>                
                @Html.DisplayNameFor(model => model.ActCode)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductId)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActCode)
            </td>
        </tr>
}
    </tbody>
</table>
