@{
    Layout = "/Views/Shared/_CusLayout.cshtml";//using the customized layout,使用每一页长一样
    ViewData["Title"] = "Goods Page";
    var userid = ViewData["UserId"];
    var goods = (List<Good>)ViewData["search"];
}

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            text-align: left;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .add-button {
            display: block;
            width: 100px;
            margin-left: 0px auto;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
        }

            .add-button:hover {
                background-color: #0056b3;
            }

        /*here define the search*/
        .search-body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100px;
            width: 300px;
            margin: 0 auto;
        }

        .search {
            border: 2px solid #ccc;
            margin: 0 auto;
            border-radius: 25px;
            display: flex;
            overflow: hidden;
            height: 50px;
        }

        .input {
            height: 100%;
            font-family: inherit;
            font-size: inherit;
            padding-inline-start: 25px;
            border: none;
            outline: none;
        }

        .image {
            height: 100px;
            width: 200px;
        }
    </style>
</head>

<div class="search-body">
    <form class="search" asp-action="Search" method="post">
        <input type="search" class="input" id="input" name="search" placeholder="Search Product" autocomplete="off">
        <input type="button" name="input_text" id="input_text" class="btn">
    </form>
</div>
<body>
    <table>
        <thead>
            <tr>
                <th>Image</th>
                <th>Product</th>
                <th>Price</th>
                <th>Introduction</th>
                <th>Operation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Good item in goods)/*this is an example src here, more images needs to be added in our database*/
            {

                <tr>
                    <td>
                        <img class="image" src=@item.Image>
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Intro</td>
                    <td>
                        <form asp-action="AddToCart" method="post">
                            <input type="hidden" id="@item.Name" name="Name" value="@item.Name">
                            <input type="hidden" id="@item.ProductId" name="ProductId" value="@item.ProductId">
                            <input type="submit" class="add-button" id="button" value="Add to cart">
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</body>
