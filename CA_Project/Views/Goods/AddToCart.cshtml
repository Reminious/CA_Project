@{
    Layout = "/Views/Shared/_CusLayout.cshtml";//using the customized layout,使用每一页长一样
    ViewData["Title"] = "Add To Cart";
    var name = ViewData["name"];
}
<head>
    <style>
        .button{

            border: .5px solid crimson;
            border-radius: 10px;
            color: #000;
            padding: 8px;
            height:50px;
            width:200px;
            font-size:20px;
        }
        .notice{
            margin-top:100px;
            color: #335EFF;
            height: 200px;
            width: 1000px;
            font-size:30px;
        }
    </style>
</head>
<body>
    <div class="notice">
		<center>@name successfully added to your cart!</center>
    </div>

    <div>
		<center><button class="button" id="return">return to Gallery</button></center>
    </div>
    <script type="text/javascript">
        var button = document.getElementById('return');
        button.addEventListener('click', function () {
            window.location.href = "@Url.Action("Index", "Goods")"//return to the Gallery page
        })
    </script>
</body>

